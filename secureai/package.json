{
  "name": "secureai",
  "version": "1.0.0",
  "description": "AI-powered GitHub App for automated security auditing and vulnerability detection",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "security",
    "github-app",
    "ai",
    "claude",
    "vulnerability-scanner",
    "code-analysis"
  ],
  "author": "Zeeshan Hassan Memon",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "@octokit/webhooks": "^13.2.0",
    "@octokit/app": "^15.0.0",
    "@octokit/rest": "^21.0.0",
    "express": "^4.19.2",
    "dotenv": "^16.4.5",
    "zod": "^3.23.8",
    "chalk": "^5.3.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
